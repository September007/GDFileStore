{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "vendor": {},
  "configurePresets": [
    {
      "name": "Windows-MSVC",
      "displayName": "Windows-MSVC",
      "description": "as the name says",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install_X64-Windows-MSVC/${presetName}"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/3.0": {
          "hostOS": [ "Windows" ],
          "intelliSenseMode": "windows-msvc-x64"
        }
      }
    },
    {
      "name": "Linux-GCC",
      "displayName": "Linux-GCC",
      "description": "Sets Ninja generator, compilers, build and install directory, debug build type",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build_X64-Linux-GCC/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install_X64-Linux-GCC/${presetName}",
        "VCPKG_TARGET_TRIPLET": "x86-linux"
      },

      "architecture": {
        "strategy": "external",
        "value": "x86"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/3.0": {
          "hostOS": [ "Linux" ]
        }
      }
    }
  ],
  "buildPresets": [
    {
      "name": "X64-msvc",
      "inheritConfigureEnvironment": true,
      "configurePreset": "Windows-MSVC",
      "environment": {
        "VCPKG_TARGET_TRIPLET": "x64-windows"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": [ "Windows" ],
          "intelliSenseMode": "windows-msvc-x64"
        }
      }
    },
    {
      "name": "X86-msvc",
      "inheritConfigureEnvironment": true,
      "configurePreset": "Windows-MSVC",
      "environment": {
        "VCPKG_TARGET_TRIPLET": "x86-windows"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": [ "Windows" ],
          "intelliSenseMode": "windows-msvc-x86"
        }
      }
    },
    {
      "name": "X64-Linux",
      "configurePreset": "Linux-GCC"
    }
  ]
}
